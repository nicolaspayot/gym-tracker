{
  "name": "gym-tracker-api",
  "version": "1.0.0",
  "description": "Simple CRUD API to handle gym workout routines",
  "main": "app.js",
  "config": {
    "base_path": "src"
  },
  "scripts": {
    "eslint": "node node_modules/eslint/bin/eslint $npm_package_config_base_path/*.js; exit 0",
    "eslint:watch": "node node_modules/eslint-watch/bin/esw -w $npm_package_config_base_path/*.js; exit 0",
    "start": "node node_modules/nodemon/bin/nodemon babel --watch $npm_package_config_base_path & npm run eslint:watch",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "author": "Nicolas Payot",
  "license": "MIT",
  "devDependencies": {
    "babel": "^5.8.23",
    "babel-eslint": "^4.1.3",
    "connect": "^3.4.0",
    "eslint": "^1.5.1",
    "eslint-watch": "^2.1.1",
    "nodemon": "^1.7.0"
  }
}
